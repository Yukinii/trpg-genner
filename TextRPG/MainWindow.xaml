<Window x:Class="TextRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextRPG (Alpha!)" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Label Content="E-mail" HorizontalAlignment="Center" Margin="234,25,237,0" VerticalAlignment="Top" FontWeight="Bold" Width="46"/>
        <TextBox x:Name="nTbEmail" HorizontalAlignment="Left" Height="23" Margin="164,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="223,109,227,0" VerticalAlignment="Top" FontWeight="Bold" Width="67"/>
        <TextBox x:Name="nTbPass" HorizontalAlignment="Left" Height="23" Margin="164,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Label Content="TextRPG Build:" HorizontalAlignment="Left" Margin="10,286,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="10"/>
        <Label x:Name="nLblBuild" Content="a1000 (a0.0.1) Mar 9, 2015" HorizontalAlignment="Left" Margin="89,286,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="10"/>
        <Button x:Name="nBtnLogin" Content="Login" HorizontalAlignment="Center" Margin="221,203,221,0" VerticalAlignment="Top" Width="75" FontWeight="Bold" Height="40" Click="nBtnLogin_Click"/>

    </Grid>
</Window>
